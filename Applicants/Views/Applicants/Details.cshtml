@model Applicants.Models.Applicant

@{
    ViewData["Title"] = "Details";
}


<h1>Details</h1>

<div>
    <h4>Applicant</h4>
    <hr />
    <dl class="row">
        <dt>
            <div style="height:150px; width=150px">
                <img src="@Url.Content(Model.ImageUrl)" height="150px" width="150px" />
            </div>
        </dt>
        <dt class = "col-sm-2">

            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Age)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Age)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ImageUrl)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ImageUrl)
        </dd>

    </dl>
</div>



    <tr>
        <td colspan="5">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th style="color: purple;">Company Name</th>
                        <th style="color: purple;">Designation</th>
                    </tr>
                </thead>
                <tbody>
                @for ( int i=0; i<Model.Experience.Count; i++)
                        {
                        <tr>
                        <td>@Model.Experience[i].CompanyName</td>
                        <td>@Model.Experience[i].YearOfExperience</td>
                    </tr>
                    }
                </tbody>
            </table>
        </td>
    </tr>

<div>
    <a asp-action="Edit" class="btn btn-primary" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index" class="btn btn-danger">Cancel</a>
</div>